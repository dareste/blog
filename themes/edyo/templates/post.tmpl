{#  -*- coding: utf-8 -*- #}
{% import 'post_helper.tmpl' as helper with context %}
{% import 'comments_helper.tmpl' as comments with context %}
{% extends 'base.tmpl' %}
{% block extra_head %}
{{ helper.twitter_card_information(post) }}
{% if post.meta('keywords') %}
    <meta name="keywords" content="{{ post.meta('keywords')|e }}"/>
{% endif %}
{% endblock %}
{% block content %}
    <article class="postbox clearfix">
        {{ helper.html_title() }}
        {{ helper.html_title_pager(post) }}
        <div class="meta">
            <small>
                {% if post.meta('author') %}
                {{ messages("by") }} <span class="author">{{ post.meta('author') }}</span>
                {% endif %}
                {{ messages("at") }} <time class="published" datetime="{{ post.date.isoformat() }}">{{ post.formatted_date(date_format) }}</time>
                {{ helper.html_translations(post) }}
                {{ messages("in") }} {{ helper.html_tags(post) }}
            </small>
        </div>
        {{ post.text() }}
    </article>
    {{ helper.html_extended_pager(post) }}
    {% if not post.meta('nocomments') %}
    {{ comments.comment_form(post.permalink(absolute=True), post.title(), post._base_path) }}
    {% endif %}
    {{ helper.mathjax_script(post) }}
{% endblock %}

{% block sourcelink %}
{% if not post.meta('password') %}
    <li>
    <a href="{{ post.source_link() }}" id="sourcelink">{{ messages("Source") }}</a>
    </li>
{% endif %}
{% endblock %}
